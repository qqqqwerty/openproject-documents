<tr id="document-<%= document_table_short %>">
    <td class="document-category-elements--header">
        <%= link_to h(document_table_short.title), :controller => '/documents', :action => 'show', :id => document_table_short %>
    </td>
    <td class="document-category-elements--date">
        <em><%= format_time(document_table_short.updated_on) %></em>
    </td>
    <td class="wiki">
        <%= format_text(truncate_lines(document_table_short.description)) %>
    </td>
</tr>
<%  if (document_table_short.attachments.count > 0) %>
  <% if @display_attachments %>
    <tr><th colspan="3"><%= link_to_attachments document_table_short %></td></tr>
  <% end %>
<% else %>
    <tr><th colspan="3"><font color="red"><%= I18n.t(:label_no_attachments_exist) %></font></th></tr>
<% end %>
